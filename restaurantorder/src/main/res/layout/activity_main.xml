<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.leo.restaurantorder.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点餐与开台"
        android:id="@+id/order"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:onClick="onButtonClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看空座位"
        android:id="@+id/view_spare_seat"
        android:layout_marginTop="86dp"
        android:layout_below="@+id/order"
        android:layout_centerHorizontal="true"
        android:onClick="onButtonClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="结账与查台"
        android:id="@+id/checkout"
        android:layout_below="@+id/view_spare_seat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        android:onClick="onButtonClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="变更座位"
        android:id="@+id/change_seat"
        android:layout_below="@+id/checkout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp"
        android:onClick="onButtonClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="并台结账"
        android:id="@+id/pay_merger"
        android:layout_below="@+id/change_seat"
        android:layout_centerHorizontal="true"
        android:onClick="onButtonClicked" />
</RelativeLayout>
